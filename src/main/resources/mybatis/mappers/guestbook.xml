<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- resultMap -->
<mapper namespace="guestbook">
	<resultMap id="resultMapGuestVo" type="GuestVo">
		<result column="no" property="no" />
		<result column="name" property="name" />
		<result column="password" property="password" />
		<result column="content" property="content" />
		<result column="reg_date" property="regDate" />
	</resultMap>
<!-- 쿼리문 작성 -->
	
	<!-- insert -->
	<insert id="insert" parameterType="GuestVo">
		<![CDATA[
			insert into guestbook
			values(seq_guestbook_no.nextval, #{name}, #{password}, #{content}, sysdate)
		]]>
	</insert>
	
	<!-- delete -->
	<delete id="delete" parameterType="GuestVo">
		<![CDATA[
			delete from guestbook
			where no = #{no}
			and password = #{password}
		]]>
	</delete>
	
	<!-- getList -->
	<select id="getList" resultMap="resultMapGuestVo">
		<![CDATA[
			select	no,
					name,
					password,
					content,
					to_char(reg_date, 'YYYY-MM-DD HH24:MM:SS') regDate
			from guestbook
			order by reg_date desc
		]]>
	</select>
	
</mapper>