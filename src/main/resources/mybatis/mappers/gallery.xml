<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gallery">
	<insert id="insert" parameterType="FileVo">
	<![CDATA[
		insert into gallery
		values(seq_files_no.nextval, #{userNo}, #{content}, #{filePath}, #{orgName}, #{saveName}, #{fileSize})
	]]>
	</insert>
	
	<delete id="delete" parameterType="int">
	<![CDATA[
		delete from gallery
		where no = #{no}
	]]>
	</delete>
	
	<select id="getList" resultType="map">
	<![CDATA[
		select	g.no,
				name,
				filePath,
				saveName
		from users u, gallery g
		where u.no = g.user_no
	]]>
	</select>
	
	<select id="getGallery" parameterType="String" resultType="GalleryVo">
	<![CDATA[
		select	no,
				content,
		from gallery
		where saveName = #{saveName}
	]]>
	</select>
</mapper>