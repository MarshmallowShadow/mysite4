<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- resultMap -->
<mapper namespace="users">
	<resultMap id="resultMapUserVo" type="UserVo">
		<result column="no" property="no" />
		<result column="id" property="id" />
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="gender" property="gender" />
	</resultMap>
	
<!-- 쿼리문 작성 -->
	<!-- insert -->
	<insert id="insert" parameterType="UserVo">
		<![CDATA[
			insert into users
			values(seq_users_no.nextval, #{id}, #{password}, #{name}, #{gender})
		]]>
	</insert>
	
	<update id="update" parameterType="UserVo">
		<![CDATA[
			update users
			set		password = #{password},
					name = #{name},
					gender = #{gender}
			where id = #{id}
		]]>
	</update>
	
	<!-- getUser (login) -->
	<select id="getAuthUser" parameterType="UserVo" resultMap="resultMapUserVo">
		<![CDATA[
			select	no,
					name
			from users
			where id = #{id}
			and password = #{password}
		]]>
	</select>
	
	<!-- getUser (modifyForm) -->
	<select id="getUser" parameterType="int" resultMap="resultMapUserVo">
		<![CDATA[
			select	id,
					password,
					name,
					gender
			from users
			where no = ${no}
		]]>
	</select>

</mapper>